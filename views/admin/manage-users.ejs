<div class="page-container">
    <div class="page-header">
        <h2>Manage Users</h2>
        <h3>View and remove registered users</h3>
    </div>
    
    <% if (users.length === 0) { %>
        <p>No users found.</p>
    <% } %>

    <div class="carpool-grid">
        <% users.forEach(user => { %>
            <div class="carpool-card">
                <div>
                    <h4><%= user.name %></h4>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>Role:</strong> <%= user.role %></p>
                </div>

                <div class="card-footer">
                    <!-- Allow deletion only if the user is not an admin -->
                    <% if (user.role !== 'admin') { %>
                        <!-- Form to delete a user (DELETE request via method override) -->
                        <form action="/admin/users/<%= user._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">
                                Delete User
                            </button>
                        </form>
                    <% } else { %>
                        <p><em>Admin account</em></p>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>
</div>
